<%- include("partials/header.ejs") %>

<main class="container mt-5">
<% posts.forEach(post=> { %>
    <div class="post">
        <h2>
            <%= post.title %>
        </h2>
        <p>
            <%= post.content.substring(0, 100) %>...
        </p>
        <a href="/post/<%= post.slug %>">Read More</a>
        <a href="/edit/<%= post.slug %>" class="btn btn-dark">Edit Post</a>
        <a href="/delete/<%= post.slug %>" class="btn btn-danger">Delete Post</a>

    </div>
    <% }) %>
</main>

<%- include("partials/footer.ejs") %>